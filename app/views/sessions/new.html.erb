<h3>login</h3>
<% if flash[:alert] %>
<p id="notice"><%= flash [:alert] %></p>
<% end %>

<%= form_tag do  %>

<div class="field">
    <%= label_tag :name %><br />
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="field">
    <%= label_tag :password, 'Password' %><br />
    <%= password_field_tag :password,  params[:password] %>
  </div>
   <div class="actions">
    <%= submit_tag 'Login', :class => "button" %>
  </div>
 <% end %> 

